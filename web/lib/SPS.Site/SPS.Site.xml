<?xml version="1.0" encoding="UTF-8"?>
<actions>
    <group name="Pages">
        <action name="GetMetaDetails" />
        <action name="GetNavigations" />
        <action name="GetStaticPage">
            <path>GetStaticPage</path>
            <parameters>
                <request>
                    <param name="gsp_With404">false</param>
                </request>
            </parameters>
        </action>
        <action name="GetForceStaticPage">
            <path>GetStaticPage</path>
            <parameters>
                <request>
                    <param name="gsp_With404">true</param>
                </request>
            </parameters>
        </action>
        <action name="GetSiteParams">
            <path>controls/GetSiteParams</path>
            <parameters>
                <request>
                    <param name="gsp_Container">"__params"</param>
                </request>
            </parameters>
        </action>
    </group>

    <group name="Daemons">
        <action name="ProcessQueue">
            <path>daemons/ProcessQueue</path>
        </action>
        <action name="SyncSources">
            <path>daemons/SyncSources</path>
        </action>
    </group>

    <group name="Controls">
        <action name="ImageUploadControl">
            <path>controls/ImageUploadControl</path>
        </action>

        <group name="Articles">
            <action name="GetAriclesListControl">
                <path>controls/GetAriclesListControl</path>
            </action>
            <action name="DeleteAricleControl">
                <path>controls/DeleteAricleControl</path>
            </action>
            <action name="GetAriclesQueueListControl">
                <path>controls/GetAriclesQueueListControl</path>
            </action>
            <action name="DeleteAricleQueueControl">
                <path>controls/DeleteAricleQueueControl</path>
            </action>
            <action name="AddAricleToQueueControl">
                <path>controls/AddAricleToQueueControl</path>
            </action>
        </group>
    </group>

	<!-- Put your's frontend actions here -->
    <group name="Site">
        <action name="GetIndexPage" />
    </group>
</actions>