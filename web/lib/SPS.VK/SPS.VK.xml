<?xml version="1.0" encoding="UTF-8"?>
<actions>
    <action name="VKLogout">
        <path>VKLogout</path>
        <redirects>
            <redirect name="success" path="/" />
        </redirects>
    </action>
    <action name="VKLogoutSilent">
        <path>VKLogout</path>
    </action>
    <action name="VKLoginRedirect">
        <path>VKLoginRedirect</path>
        <redirects>
            <redirect name="redirect" path="{redirect}" />
        </redirects>
    </action>
    <action name="VKCheckAuth">
        <path>VKCheckAuth</path>
        <redirects>
            <redirect name="login" path="/login/?{redirect}" />
        </redirects>
    </action>
    <action name="VKCheckAuthEditor">
        <path>VKCheckAuth</path>
        <parameters>
            <request>
                <param name="checkEditor">true</param>
            </request>
        </parameters>
        <redirects>
            <redirect name="login" path="/login/?{redirect}" />
            <redirect name="empty" path="/landing/" />
        </redirects>
    </action>
    <action name="VKCheckAppAuth">
        <path>VKCheckAppAuth</path>
        <parameters>
            <request>
                <param name="isVkApp">true</param>
            </request>
        </parameters>
        <redirects>
            <redirect name="empty" path="/app/landing/" />
        </redirects>
    </action>
    <action name="VKCheckAppAuthSilent">
        <path>VKCheckAppAuth</path>
        <parameters>
            <request>
                <param name="silent">true</param>
                <param name="isVkApp">true</param>
            </request>
        </parameters>
    </action>
</actions>